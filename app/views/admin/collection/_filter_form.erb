<div id="filter_form" class="admin_filter_form">
    <h2><%= translate("SEARCH_BOX_TITLE") %>
    </h2>
    <%= form_tag('/admin/collection') do -%>
    <%= label_tag("name_filter", translate("NAME_LABEL")) %>
	<% display_value = params[:collection][:name] unless params[:collection].nil? or params[:collection][:name].blank? %>
	<%= autocomplete_field_tag 'name','','collection/autocomplete_collection_name', :size=>75, :skip_style=>true %>
	<%= label_tag("alt_name_filter", translate("ALT_NAME_LABEL")) %>
	<% display_value = ""%>
	<% display_value = params[:collection][:alt_name] unless params[:collection].nil? or params[:collection][:alt_name].blank? %>
	<%= autocomplete_field_tag 'alt_name','','collection/autocomplete_collection_alt_name', :size=>75, :skip_style=>true %>
    <br/>
    <%= label_tag("tab_id_filter", translate("TAB_LABEL")) %>
	<span id="tab_value">
    <% selected_value = params[:tab_id_filter][0].to_i unless params[:tab_id_filter].nil? %>
    <%= select("tab_id_filter", "",
              SearchTab.all.collect {|t| [ t.label, t.id ] },
              {:include_blank => translate("ANY_VALUE"), :selected => selected_value}) %>
    </span>
	<%= label_tag("conn_type_filter", translate("CONNECTION_TYPE_LABEL")) %>
	<span id="conn_type_value">
    <% display_value = params[:collection][:conn_type] unless params[:collection].nil? or params[:collection][:conn_type].blank? %>
    <%= autocomplete_field_tag 'conn_type','','collection/autocomplete_collection_conn_type', :size=>75, :skip_style=>true %>
    </span>
	<br/>
    <%= submit_tag translate("APPLY_FILTER") %>
    <% end -%>

</div>


